---
import ImageBlock from "../primitives/ImageBlock.astro";
import closingCta from "../../assets/svgs/closing-cta.svg";
---


<section id="ClosingCTA">
  <div class="container full-width">
    <div class="flex-group-col">
      <h2 class="title">{Astro.props.title ?? "Ready to elevate your business?"}</h2>
      <p>{Astro.props.description ?? "Book a free discovery session with no strings attached."}</p>
      <a class="btn-secondary" href={Astro.props.link ?? "/contact"}>
        {Astro.props.cta ?? "Book a Demo"}
      </a>
    </div>
    <ImageBlock
      src={closingCta}
      class="cta-image"
      alt=""
      width={910}
      height={600}
      loading="lazy"
      >
</section>

<style lang="scss">
  @use "@styles" as *;

  #ClosingCTA {
    background: linear-gradient(
      to right,
      $brand-action 0%,
      $brand-action 62.5%,
      $light 62.5%,
      $light 100%
    );
    padding: 0;
    .container {
      flex-direction: row;
      .flex-group-col {
        padding: 4rem 0 2rem 2rem;
        justify-content: center;
        align-items: flex-start;
        flex: 0 0 50%;
        .title {
          color: $light;
        }
        p {
          color: rgba($light, 0.7);
        }
        .btn-secondary {
          max-width: 50%;
        }
      }
      .cta-image {
        object-position: left;
      }
    }
  }
</style>
