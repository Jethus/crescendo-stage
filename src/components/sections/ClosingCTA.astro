---
import ImageBlock from "../primitives/ImageBlock.astro";
import closingCta from "../../assets/svgs/closing-cta.svg";
---

<section id="ClosingCTA">
  <div class="container full-width">
    <div class="flex-group-col">
      <h2 class="title">
        {Astro.props.title ?? "Ready to elevate your business?"}
      </h2>
      <p>
        {
          Astro.props.description ??
            "Book a free discovery session with no strings attached."
        }
      </p>
      <a class="btn-secondary" href={Astro.props.link ?? "/contact"}>
        {Astro.props.cta ?? "Contact Us"}
      </a>
    </div>
    <ImageBlock
      src={closingCta}
      class="cta-image"
      alt=""
      width={910}
      height={600}
      loading="lazy"
    />

    <style lang="scss">
      @use "@styles" as *;

      #ClosingCTA {
        background-color: $brand-action;
        padding: 0;
        .container {
          flex-direction: row;
          .flex-group-col {
            flex: 1 1 100%;
            padding: 2rem $gutter;
            justify-content: center;
            align-items: flex-start;
            .title {
              color: $light;
              font-size: var(--font-size-xxxl);
            }
            p {
              color: rgba($light, 0.7);
            }
          }
          .cta-image {
            display: none;
            object-position: left;
          }
          picture {
            display: none;
          }
        }
        @include container-query(tablets) {
          background: linear-gradient(
            to right,
            $brand-action 0%,
            $brand-action 62.5%,
            $light 62.5%,
            $light 100%
          );
          .container {
            .flex-group-col {
              flex: 0 0 50%;
              padding: 4rem 0 2rem 2rem;
            }
            .cta-image {
              display: block;
            }
            picture {
              display: flex;
            }
          }
        }
      }
    </style>
  </div>
</section>
