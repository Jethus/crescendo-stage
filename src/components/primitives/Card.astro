---
export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<div class="card">
  <div class="card-title">
    {title}
  </div>
  <div class="card-content">
    <slot />
  </div>
</div>

<style lang="scss">
  @use "@styles" as *;
  .card {
    // box-shadow: $drop-shadow;
    // border-left: 2px solid $brand-primary;
    background: $off-white-bg;
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    & .card-title {
      font-size: var(--font-size-base-md);
      font-weight: $medium;
      color: $brand-primary;
      margin-bottom: 1rem;
    }
  }
</style>
