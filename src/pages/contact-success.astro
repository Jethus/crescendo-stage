---
import Layout from "../layouts/Basic.astro";
import OneColumn from "../components/layout/OneColumn.astro";
---
<Layout title="Contact Success" description="Thank you for contacting Crescendo Stage. We appreciate your interest and will respond to your inquiry soon.">
<OneColumn id="contact-success" title="Thank You!">
  <section>
    <div class="container">
      <div class="flex-group-col confirmation-box">
        <h2>Your message has been sent.</h2>
        <p>We appreciate your interest and will get back to you soon. If you have additional questions, feel free to reach out again.</p>
        <a href="/" class="btn-primary">Return home</a>
      </div>
    </div>
  </section>
</OneColumn>
</Layout>

<style lang="scss">
.confirmation-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;;
  justify-content: center;
  gap: 1.5rem;
  max-width: 1000px;
  margin: 2rem auto;
  padding: 2rem;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
</style>