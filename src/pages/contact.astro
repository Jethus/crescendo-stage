---
import Layout from "../layouts/Basic.astro";
import TwoColumn from "../components/layout/TwoColumn.astro";
import ContactForm from "../components/interactive/ContactForm.astro";
---

<Layout
  title="Contact Us"
  description="Contact Crescendo Stage for partnership, demo, or general inquiries. Our team is ready to help you transform your business."
>
  <TwoColumn id="contact-page" title="Contact Us">
    <div class="flex-text" slot="left">
      <h1>Get in touch with our team</h1>
      <p>
        Fill out the form below and our team will get back to you as soon as
        possible. For partnership, demo, or general inquiries, this is the best
        way to reach us.
      </p>
    </div>
    <ContactForm slot="right" />
  </TwoColumn>
</Layout>

<style lang="scss" is:global>
  @use "@styles" as *;
  #contact-page {
    background: $gradient-bg;
    padding: 2rem 0;
    .container {
      gap: 0;
    }
    .left-side {
      flex: 0 0 40%;
      padding: 2rem $gutter;
      justify-content: center;
      h1 {
        font-weight: $black;
      }
    }
    .right-side {
      flex: 0 0 60%;
      .btn-primary {
        max-width: 100%;
      }
    }
    @include container-query(tablets) {
      padding: 4rem;
      .container {
        gap: 2rem;
      }
    }
  }
</style>
