---
import Layout from "../layouts/Basic.astro";
import TwoColumn from "../components/layout/TwoColumn.astro";
import Tabs from "../components/interactive/Tabs.astro";
import ImageBlock from "../components/primitives/ImageBlock.astro";
import softwareImage from "../assets/webp/software.webp";
import reportsImage from "../assets/webp/reports.webp";
---

<Layout title="Our Services" description="Lorem ipsum dolor sit amet">
  <TwoColumn title="AI Solutions" heading="h1" id="ai-solutions">
    <p slot="left">
      Empower and streamline your operations by automating repetitive tasks such
      as data entry, document review, exception handling and reporting. Our AI
      solutions integrate seamlessly with your existing systems and processes,
      freeing your team to focus on exception resolution and strategic
      priorities.
    </p>
    <a href="/contact" class="btn-primary" slot="left">Book a Demo</a>
    <ImageBlock
      slot="right"
      src={softwareImage}
      alt=""
      width="1359"
      height="750"
      loading="eager"
      class="right-image"
      layout="full-width"
      priority
    />
  </TwoColumn>
  <TwoColumn title="AI Configure" id="ai-configure">
    <Tabs slot="left" />
    <ImageBlock
      slot="right"
      src={reportsImage}
      alt=""
      width="600"
      height="900"
      loading="eager"
      class="right-image"
      layout="constrained"
      />
  </TwoColumn>
</Layout>

<style lang="scss" is:global>
  @use "@styles" as *;

  #ai-configure {
    .right-side {
      flex: 0 0 50%;
      img {
        box-shadow: $drop-shadow;
        border-radius: .5rem;
      }
    }
  }
